<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="28dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:id="@+id/textView7"
        tools:layout_editor_absoluteY="145dp"
        tools:layout_editor_absoluteX="161dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText"
        android:hint="Username Here.."
        tools:layout_editor_absoluteY="377dp"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/UserNameeditText"
        android:layout_alignLeft="@+id/UserNameeditText"
        android:layout_alignStart="@+id/UserNameeditText"
        android:id="@+id/editText2"
        android:hint="Password Here"
        tools:layout_editor_absoluteY="273dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordeditText"
        android:layout_toLeftOf="@+id/passwordeditText"
        android:layout_toStartOf="@+id/passwordeditText"
        android:id="@+id/button4"
        tools:layout_editor_absoluteY="273dp"
        tools:layout_editor_absoluteX="247dp" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/passwordeditText"
        android:layout_alignEnd="@+id/passwordeditText"
        android:id="@+id/button5"
        tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Screen Event Handling Example"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="194dp"
        tools:layout_editor_absoluteX="23dp" />

    <TextView
        android:text="Login State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView9"
        tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="168dp" />
</android.support.constraint.ConstraintLayout>